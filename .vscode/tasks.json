{
	"version": "2.0.0",
    "linux": {
        "command": "sh",
        "args": [
          "-c"
        ]
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": [
              "/C"
            ]
          }
        }
      },
	"tasks": [
        {
            "type": "nuke",
            "target": "Compile",
            "problemMatcher": [
                "$msCompile"
            ],
            "label": "nuke: Compile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "nuke",
            "target": "Default",
            "problemMatcher": [
                "$msCompile"
            ],
            "label": "nuke: Default",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tests/Application.Unit/Application.Unit.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/tests/Application.Unit/Application.Unit.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/tests/Application.Unit/Application.Unit.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
    ]
}