{
	"version": "2.0.0",
    "linux": {
        "command": "sh",
        "args": [
          "-c"
        ]
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": [
              "/C"
            ]
          }
        }
      },
	"tasks": [
        {
            "label": "build identity",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/source/CogniVault.Api.Identity/CogniVault.Api.Identity.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build filemanager",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/source/CogniVault.Api.FileManager/CogniVault.Api.FileManager.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "nuke",
            "target": "Compile",
            "problemMatcher": [
                "$msCompile"
            ],
            "label": "nuke: Compile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "nuke",
            "target": "Default",
            "problemMatcher": [
                "$msCompile"
            ],
            "label": "nuke: Default",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tests/Application.Unit/Application.Unit.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/CogniVault.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/CogniVault.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/CogniVault.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build: debug",
            "dependsOn": [
                "build"
            ],
            "dockerBuild": {
                "tag": "cognivault:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/source/CogniVault.Api.Identity/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/source/CogniVault.Api.Identity/CogniVault.Api.Identity.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build: release",
            "dependsOn": [
                "build"
            ],
            "dockerBuild": {
                "tag": "cognivault:latest",
                "dockerfile": "${workspaceFolder}/source/CogniVault.Api.Identity/Dockerfile",
                "context": "${workspaceFolder}",
                "platform": {
                    "os": "linux",
                    "architecture": "amd64"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/source/CogniVault.Api.Identity/CogniVault.Api.Identity.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/source/CogniVault.Api.Identity/CogniVault.Api.Identity.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": [
                "docker-build: release"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/source/CogniVault.Api.Identity/CogniVault.Api.Identity.csproj"
            }
        }
    ]
}